<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.easytask.easytask.frontend.views.EditMyProfilFragment">


    <LinearLayout
        android:id="@+id/edit_my_profile_address"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edit_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Name"
            android:textSize="30dp" />

        <ImageView
            android:id="@+id/edit_profile_picture"
            android:layout_width="106dp"
            android:layout_height="123dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_person_black_24dp" />

        <Button
            android:id="@+id/edit_Profile_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Skift Profil Billede" />

        <EditText
            android:id="@+id/edit_my_profile_address1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Name" />

        <EditText
            android:id="@+id/edit_my_profile_zipCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="zipCode" />

        <EditText
            android:id="@+id/edit_my_profile_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="city" />

        <Button
            android:id="@+id/edit_my_profile_savebutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Gem" />

    </LinearLayout>

</FrameLayout>

