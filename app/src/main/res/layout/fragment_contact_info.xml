<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_rc"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:clickable="true"
    android:layout_gravity="center_vertical"
    android:orientation="vertical"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="15dp">



    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Kontakt info"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">


        <TextView
            android:id="@+id/contact_name_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Navn"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/contact_address_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adresse"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/contact_zip_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="zip code"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/contact_city_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="City"
                android:textSize="18sp" />


        </LinearLayout>

        <TextView
            android:id="@+id/contact_phone_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Telefon"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/contact_call_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ring"
                android:backgroundTint="@color/blåFarve6"
                android:textColor="#FFFFFF"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/contact_sms_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SMS"
                android:backgroundTint="@color/blåFarve6"
                android:textColor="#FFFFFF"
                android:layout_weight="1"/>


        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/contact_return_btn"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Tilbage til opgaven" />


</LinearLayout>