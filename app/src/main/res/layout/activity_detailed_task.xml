<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout_boarder"
    tools:context="com.easytask.easytask.frontend.views.DetailedTaskActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/detailed_task_payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/create_task_payment" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="@drawable/layout_boarder">

            <ImageView
                android:id="@+id/detailed_task_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_person_black_24dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/detailed_task_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:text="Emne"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3">

            <TextView
                android:id="@+id/detailed_task_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Beskrivelse"
                android:textSize="24sp" />

        </ScrollView>

        <Button
            android:id="@+id/detailed_task_contact_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kontakt opgavestiller"
            android:background="@color/blÃ¥Farve4"
            android:textColor="#FFFFFF"
            android:padding="5dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            />




    </LinearLayout>


    <FrameLayout
        android:id="@+id/fragment_container_detailed"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">


    </FrameLayout>

</RelativeLayout>
